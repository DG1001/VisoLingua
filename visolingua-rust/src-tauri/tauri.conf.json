{
  "productName": "VisoLingua",
  "version": "1.0.0",
  "identifier": "com.visolingua.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/**"]
      },
      "capabilities": ["default"]
    },
    "windows": [
      {
        "title": "VisoLingua - Capture",
        "label": "overlay",
        "url": "index.html",
        "width": 400,
        "height": 300,
        "resizable": true,
        "decorations": true,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true
      },
      {
        "title": "VisoLingua - Result",
        "label": "result",
        "url": "result.html",
        "width": 600,
        "height": 500,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false
      }
    ]
  }
}